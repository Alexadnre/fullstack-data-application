# ===============================
# GLOBAL PROJECT SETTINGS
# ===============================
PROJECT_NAME=fullstack-data-application
TZ=Europe/Paris

# ===============================
# API (FastAPI)
# ===============================
API_HOST=0.0.0.0
API_PORT=8000
E2E_API_BASE_URL=http://localhost:8000

# ============================================================
# DATABASE CONFIGURATION (valeurs de base)
# ============================================================
POSTGRES_USER=user
POSTGRES_PASSWORD=postgrespassword
POSTGRES_DB=calendar_db

# Côté host
DB_HOST_LOCAL=localhost
DB_PORT_LOCAL=5432

# Côté conteneur
DB_HOST_CONTAINER=db
DB_PORT_CONTAINER=5432

# ============================================================
# DATABASE URLS construites à partir des variables ci-dessus
# ============================================================

# URL utilisée en local (uvicorn, pytest, etc.)
DATABASE_URL=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST_LOCAL}:${DB_PORT_LOCAL}/${POSTGRES_DB}

# URL utilisée dans le conteneur API
DATABASE_URL_PROD=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${DB_HOST_CONTAINER}:${DB_PORT_CONTAINER}/${POSTGRES_DB}

# Les tests d’intégration utilisent la même base que le dev local
TEST_DATABASE_URL=${DATABASE_URL}

